{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Laboratory App",
  "version": "0.1.0",
  "identifier": "com.joaopauloii.laboratory",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/laboratory-app/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Laboratory App",
        "width": 1280,
        "height": 768,
        "minWidth": 1024,
        "minHeight": 640,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "shortDescription": "Desktop app for laboratory management.",
    "longDescription": "Desktop application for patient, exam and laboratory workflow management.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
